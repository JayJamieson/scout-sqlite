{
  "compilerOptions": {
    "module": "NodeNext",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "esnext",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "lib": ["es2022"],
    "rootDir": "src"
  },
  "ts-node": {
    "files": true // allow ts-node to include type declarations and module merging
  },
  "include": ["src"],
}
